---
export interface Props {
	post: any;
	pinned?: boolean;
}

const { post, pinned } = Astro.props;
---

<article class="post-preview">
	<header>
		<p class="publish-date">{post.frontmatter.publishDate}</p>
		<a href={post.url}><h3>{pinned && <span class="pin-badge">pinned</span>}{post.frontmatter.title}</h3></a>
	</header>
	<p>{post.frontmatter.description}</p>
	<a href={post.url}>Read more</a>
</article>

<style>
	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.post-preview {
		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 1px solid var(--theme-divider);
	}

	header {
		align-items: flex-start;
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: left;
	}

	h3 {
		font-size: 1.25rem;
		margin: 0;
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--theme-text);
	}

	.pin-badge {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		background-color: var(--theme-bg-offset, #f0f0f0);
		color: var(--theme-text-lighter, #666);
		padding: 0.15em 0.5em;
		border-radius: 4px;
		margin-right: 0.5em;
		vertical-align: middle;
	}
</style>
