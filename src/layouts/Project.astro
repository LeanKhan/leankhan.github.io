---
const { project } = Astro.props;
const {name, projectDate, link } = project;
const tags = project.tags.split(",");

let linkEl = ``;

if(link) {
    linkEl = `<a class="d-flex justify-content-end ms-auto"
    href="${link}" target="blank_">check it out</a>`;
}
---

    <article id={ name.toLowerCase() }>
        <header>

            <h2>
                {name}
            </h2>
            <p class="text-muted small">
               {projectDate}
            </p>

            <ul class="tag-list">
                {tags.map(tag => <li class="pixel-text badge bg-secondary">{tag}</li>)}
            </ul>

        </header>


        <div class="b-work__content">

        <slot />

            {linkEl}

        </div>

    </article>