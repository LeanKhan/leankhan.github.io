---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BaseFooter from '../components/BaseFooter.astro';
import BaseHeader from '../components/BaseHeader.astro';
import Project from '../layouts/Project.astro';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'Projects';
let description = 'Selected Projects of ESLean';
let permalink = 'https://e.segunlean.com/projects';

let allProjects = await Astro.glob('../meta/projects/*.md');
// sort by newest first
allProjects = allProjects.sort((a, b) => new Date(b.frontmatter.projectDate).valueOf() - new Date(a.frontmatter.projectDate).valueOf());
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {permalink} />
  </head>
  <body>
    <div class="main-wrapper section md-section">
    <BaseHeader />
      <main class="main-content">

        <h4 class="page-title text-light">Selected Projects</h4>

<section aria-label="Blog post list">
					{allProjects.map((p) =>
                    <Project project={p.frontmatter}>
                        <p.Content />
                    </Project>)}
				</section>
<p class="text-muted small">
  adding more...
</p>
      </main>
    </div>

<BaseFooter />
  </body>
</html>
